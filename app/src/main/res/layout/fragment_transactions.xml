<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F4F3"
    tools:context=".fragments.TransactionsFragment">

    <!-- Custom Toolbar -->
    <TextView
        android:id="@+id/tv_toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="All Transactions"
        android:textColor="@color/text_primary"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- AFTER -->

    <!-- Search View -->

    <ImageView
        android:id="@+id/iv_add_transaction_toolbar"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="10dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="6dp"
        android:src="@drawable/ic_add_circle" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_toolbar_title"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/search_view_background"
        app:iconifiedByDefault="false"
        app:queryBackground="@android:color/transparent"
        app:queryHint="Search transactions..." />

    <!-- Sorting Chips (Filter button) -->
    <!-- The ChipGroup can be hidden, we will replace it with a simple Filter button for this UI -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_filter"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_view"
        android:layout_marginStart="16dp"
        android:text="Filter"
        android:textColor="@color/dark_green"
        app:backgroundTint="#E8F8F5"
        app:icon="@drawable/ic_filter"
        app:iconTint="@color/dark_green" />

    <!-- This ChipGroup can be made invisible if not used, but is kept for the Java code to find -->
    <HorizontalScrollView
        android:id="@+id/sorting_chip_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/btn_filter"
        android:visibility="gone">
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/sorting_chip_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </HorizontalScrollView>

    <!-- RecyclerView -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_transactions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/btn_filter"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="2dp"
        android:clipToPadding="false"
        android:padding="8dp"
        tools:listitem="@layout/transaction_item_layout" />

    <TextView
        android:id="@+id/tv_no_transactions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="No transactions yet."
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <!-- The original FAB from HomeActivity will float over this screen, matching the design -->

</RelativeLayout>